<h1><%= @article.title %></h1>
<p> <%= @article.body %></p>


<h2>Comments</h2>
<%=render @article.comments%>

<h2>Add a comment</h2>
<%= render 'comments/form'%>

  <ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Delete article", article_path(@article),
                    method: :delete,
                    data: { confirm: "Are you sure?"}%></li>
</ul>